<Project Sdk="MSBuild.Sdk.Extras" ToolsVersion="15.0">

  <PropertyGroup>
    <TargetFrameworks></TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">netstandard2.0;net461;uap10.0.16299;MonoAndroid60;MonoAndroid70;MonoAndroid71;xamarinmac20;xamarinios10</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' != 'Windows_NT' ">netstandard2.0;net461;MonoAndroid60;MonoAndroid70;MonoAndroid71;xamarinios10</TargetFrameworks>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>7.3</LangVersion>
    <Description>High performance cross platform .NET math library</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Platforms\**\*.cs" />
    <None Include="Platforms\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)'=='net461' ">
    <Compile Include="Platforms\NetStandard\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Include="Platforms\NetStandard\**\*.cs" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
    <Compile Include="Platforms\NetStandard\**\*.cs" />
    <Compile Include="Platforms\UWP\**\*.cs" />
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.ToLower().StartsWith('monoandroid')) ">
    <Reference Include="System.Numerics" />
    <Reference Include="System.Numerics.Vectors" />
    <Compile Include="Platforms\Android\**\*.cs" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)'=='xamarinmac20' ">
    <Reference Include="System.Numerics" />
    <Reference Include="System.Numerics.Vectors" />
  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.ToLower().StartsWith('xamarinios')) ">
    <Reference Include="System.Numerics" />
    <Reference Include="System.Numerics.Vectors" />
    <Compile Include="Platforms\iOS\**\*.cs" />
  </ItemGroup>

</Project>
